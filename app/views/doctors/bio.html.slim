.container
  .row
    .col-md-4.text-center
      = render 'profile_settings'
    .col-md-8
      .card
        .card-header.text-center Biography
        .card-body
          .container
            = form_for @doctor do |f|
              .row.form-group
                .col-md-4
                  = f.select :experience, [['0 - 5 years', '0 - 5 years'], ['5 - 10 years', '5 - 10 years'], \
                    ['10 - 15 years', '10 - 15 years'], ['15+ years', '15+ years']],                         \
                    id: :experience, prompt: 'Experience (years)',                                           \
                    class: 'form-control'                                                                    
                .col-md-8
                  = f.text_area :bio, placeholder: 'Your story, what you can do, experience', class: 'form-control'
              .row.form-group
                .col-md-12
                  .card.text-center
                    .card-body
                      h5.card-title Choose your specialization (or specializations)
                      p.card-text Your can choose one or few specializations.
              .actions
                = f.submit 'Update', class: 'btn btn-normal btn-block'
