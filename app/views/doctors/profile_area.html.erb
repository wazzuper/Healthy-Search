<div class="container">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= render 'profile_settings' %>
    </div>

    <div class="col-md-8 text-center">
      <h2>Appointments</h2>
      <div class="container">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>Full name</th>
              <th>Phone number</th>
              <th>Visiting date</th>
            </tr>
          </thead>
          <tbody>
            <% @appointments.each do |appointment| %>
              <tr>
                <th><%= appointment.patient.full_name %></th>
                <th><%= appointment.patient.phone_number %></th>
                <th><%= appointment.date %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>
